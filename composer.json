{
    "name": "friendsofhyperf/components",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Deeka Wong",
            "email": "huangdijia@gmail.com"
        }
    ],
    "require": {
        "php": "^7.4|^8.0.0",
        "barryvdh/reflection-docblock": "^2.0",
        "composer/composer": "^1.0|^2.0",
        "hyperf/amqp": "~2.2.0",
        "hyperf/async-queue": "~2.2.0",
        "hyperf/cache": "~2.2.0",
        "hyperf/command": "~2.2.0",
        "hyperf/di": "~2.2.0",
        "hyperf/filesystem": "~2.2.0",
        "hyperf/framework": "~2.2.0",
        "hyperf/guzzle": "~2.2.0",
        "hyperf/kafka": "~2.2.0",
        "hyperf/logger": "~2.2.0",
        "hyperf/macroable": "~2.2.0",
        "hyperf/redis": "~2.2.0",
        "hyperf/session": "~2.2.0",
        "hyperf/validation": "~2.2.0",
        "hyperf/view": "~2.2.0",
        "league/commonmark": "^1.3|^2.0.2",
        "nesbot/carbon": "^2.43",
        "opis/closure": "^3.1",
        "phpstan/phpstan": "^0.12",
        "psy/psysh": "^0.10.0|^0.11.0",
        "ramsey/uuid": "^4.0",
        "symfony/var-dumper": "^5.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "hyperf/ide-helper": "~2.2.0",
        "mockery/mockery": "^1.0",
        "swoole/ide-helper": "dev-master",
        "phpunit/phpunit": "^9.5",
        "voku/portable-ascii": "^1.4|^1.5"
    },
    "replace": {
        "friendsofhyperf/http-request-lifecycle": "self.version"
    },
    "autoload": {
        "files": [
            "src/closure-command/src/functions.php",
            "src/helpers/src/helpers.php",
            "src/macros/src/arr.php",
            "src/macros/src/collection.php",
            "src/macros/src/str.php",
            "src/macros/src/stringable.php"
        ],
        "psr-4": {
            "FriendsOfHyperf\\AccessLog\\": "src/access-log/src/",
            "FriendsOfHyperf\\ClosureCommand\\": "src/closure-command/src/",
            "FriendsOfHyperf\\ExceptionEvent\\": "src/exception-event/src/",
            "FriendsOfHyperf\\Facade\\": "src/facade/src/",
            "FriendsOfHyperf\\Helpers\\": "src/helpers/src/",
            "FriendsOfHyperf\\Http\\Client\\": "src/http-client/src/",
            "FriendsOfHyperf\\HttpRequestLifeCycle\\": "src/http-request-lifecycle/src/",
            "FriendsOfHyperf\\IdeHelper\\": "src/ide-helper/src/",
            "FriendsOfHyperf\\Macros\\": "src/macros/src/",
            "FriendsOfHyperf\\Tinker\\": "src/tinker/src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "FriendsOfHyperf\\Tests\\": "tests/"
        }
    },
    "extra": {
        "hyperf": {
            "config": [
                "FriendsOfHyperf\\AccessLog\\ConfigProvider",
                "FriendsOfHyperf\\ClosureCommand\\ConfigProvider",
                "FriendsOfHyperf\\ExceptionEvent\\ConfigProvider",
                "FriendsOfHyperf\\Facade\\ConfigProvider",
                "FriendsOfHyperf\\Helpers\\ConfigProvider",
                "FriendsOfHyperf\\Http\\Client\\ConfigProvider",
                "FriendsOfHyperf\\HttpRequestLifeCycle\\ConfigProvider",
                "FriendsOfHyperf\\IdeHelper\\ConfigProvider",
                "FriendsOfHyperf\\Macros\\ConfigProvider",
                "FriendsOfHyperf\\Tinker\\ConfigProvider"
            ]
        }
    },
    "minimum-stability": "stable",
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "analyse": "phpstan analyse --memory-limit 300M -l 0 -c phpstan.neon ./src",
        "cs-fix": "php-cs-fixer fix $1",
        "test": "phpunit -c phpunit.xml --colors=always"
    }
}
